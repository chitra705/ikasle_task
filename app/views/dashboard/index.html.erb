<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>

  <h2>DASBOARDS</h2>
  <div class = "div1">
    <div class = "div2">
      <h4>Tasks Created per Day</h4>
      <table>
        <thead>
          <tr class = "tr">
            <th>Date</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks_created_per_day.each do |date, count| %>
            <tr>
              <td><%= date.to_date %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class = "div2">
      <h4>Task Status Distribution</h4>
        <table>
          <thead>
            <tr>
              <th>Status</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <% @task_status_distribution.each do |status, count| %>
              <tr>
                <td><%= status %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>  
  </div>

  <div class = "div1">
    <div class = "div2">
      <h4>Average Completion Time per Week</h4>
      <table>
        <thead>
            <tr>
              <th>Week</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody> 
            <% @average_completion_time_per_week.each do |week, avg_time| %>
              <tr>
                <td><%= week %></td>
                <td><%= avg_time %></td>
              </tr>
            <% end %>
          </tbody> 
      </table>
      
    </div>
    <div class = "div2">
      <h4>Tasks Assigned Member</h4>
      <table>
        <thead>
          <tr>
            <th>Member</th>
            <th>Tasks Assigned</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks_assigned_to_members.each do |member, count| %>
            <tr>
              <td><%= member %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

  </div>

 

</body>
</html>

